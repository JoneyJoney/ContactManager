@model CountryResponseDTO

@{
    ViewData["Title"] = "Update Country";
}

<div class="form-container">
    <div class="field">
        <h3>Update Country</h3>
    </div>

    <form method="post" asp-action="UpdateCountry" asp-controller="Country">
        <input type="hidden" asp-for="CountryID" />
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="CountryName" class="form-label">Country Name</label>
            </div>
            <div class="flex-1">
                <input type="text" asp-for="CountryName" class="form-input" />
                <span asp-validation-for="CountryName" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button type="submit" class="button button-green-back">Update</button>
                <a type="button" asp-action="Index" asp-controller="Country" class="button button-red-back">Cancel</a>
                <div class="text-red" asp-validation-summary="All"></div>


                @if (ViewBag.Error != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (var error in ViewBag.Error)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>

                }

            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}

