@model RegisterDTO
@{
    ViewData["Title"] = "Register";
}

<div class="form-container">
    <div class="field">
        <h3>Register</h3>
    </div>

    <form method="post" asp-action="Register" asp-controller="Account">
    <div class="form-field flex">
        <div class="w-25">
            <label asp-for="PersonName" class="form-label">Person Name</label>
        </div>
        <div class="flex-1">
            <input type="text" asp-for="PersonName" class="form-input" />
            <span asp-validation-for="PersonName" class="text-red"></span>
        </div>
    </div>
    <div class="form-field flex">
        <div class="w-25">
            <label asp-for="EmailID" class="form-label">Email ID</label>
        </div>
        <div class="flex-1">
            <input type="text" asp-for="EmailID" class="form-input" />
            <span asp-validation-for="EmailID" class="text-red"></span>
        </div>
    </div>
    <div class="form-field flex">
        <div class="w-25">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        </div>
        <div class="flex-1">
            <input type="text" asp-for="PhoneNumber" class="form-input" />
            <span asp-validation-for="PhoneNumber" class="text-red"></span>
        </div>
    </div>
    <div class="form-field flex">
        <div class="w-25">
            <label asp-for="Password" class="form-label">Password</label>
        </div>
        <div class="flex-1">
            <input type="Password" asp-for="Password" class="form-input" />
            <span asp-validation-for="Password" class="text-red"></span>
        </div>
    </div>
    <div class="form-field flex">
        <div class="w-25">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
        </div>
        <div class="flex-1">
            <input type="password" asp-for="ConfirmPassword" class="form-input" />
            <span asp-validation-for="ConfirmPassword" class="text-red"></span>
        </div>
    </div>
    <div class="form-field flex">
        <div class="w-25">
        </div>
        <div class="flex-1">
            <button type="submit" class="button button-green-back">Register</button>
                <button type="button" class="button button-red-back">Cancel</button>
            <div class="text-red" asp-validation-summary="All"></div>


            @if (ViewBag.Error != null)
            {
                <div class="text-red ml">
                    <ul>
                        @foreach (var error in ViewBag.Error)
                        {
                            <li class="ml">@error</li>
                        }
                    </ul>
                </div>

            }

        </div>
    </div>
    </form>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}

